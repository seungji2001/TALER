<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharActivity">
    
    <TextView
        android:id="@+id/main_logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="TALER"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF7A00"

        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="로그아웃"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:background="#F8F8F8"

        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/main_logo_tv"
        app:layout_constraintBottom_toBottomOf="@id/main_logo_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/main_frame_fl"
        android:layout_width="match_parent"
        android:layout_height="92dp"

        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_logo_tv"/>

    <ImageView
        android:layout_width="221dp"
        android:layout_height="38dp"

        android:src="@drawable/umc_sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/umc_main_char_iv"/>

    <ImageView
        android:id="@+id/umc_main_char_iv"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/umc_main"

        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/main_frame_fl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_in_btn"
        android:layout_width="0dp"
        android:layout_height="49dp"

        android:text="입장하기"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="#FF7A00"

        android:layout_marginBottom="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!--추천인-->

</androidx.constraintlayout.widget.ConstraintLayout>